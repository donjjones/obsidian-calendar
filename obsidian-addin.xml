<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MessageRead"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
    <Id>com.donjjones.sendtoobsidian</Id>
    <Version>1.0</Version>
    <ProviderName>Your Name</ProviderName>
    <DisplayName>Send to Obsidian</DisplayName>
    <Description>Creates a note in Obsidian for this calendar event.</Description>
    <IconUrl>https://donjjones.github.io/obsidian-calendar/icon.png</IconUrl>
    <Hosts>
        <Host Name="Outlook"/>
    </Hosts>
    <Requirements>
        <Sets>
            <Set Name="Mailbox" MinVersion="1.1"/>
        </Sets>
    </Requirements>
    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://donjjones.github.io/obsidian-calendar/obsidian-addin.html"/>
                <RequestedHeight>300</RequestedHeight>
            </DesktopSettings>
        </Form>
    </FormSettings>
    <Permissions>ReadWriteItem</Permissions>
    <Rule xsi:type="RuleCollection" Mode="Or">
        <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    </Rule>
</OfficeApp>
